- title_tag "Listen to Uncommon | Neuralle"
- description_tag "Listening to the Uncommon podcast allows you to learn the knowledge, processes, and mindset of unique individuals."

.container
  #body_content
    %link{:href => "//cdn-images.mailchimp.com/embedcode/classic-10_7.css", :rel => "stylesheet", :type => "text/css"}/
    .row
      .col-md-12
        #mc_embed_signup
          %form#mc-embedded-subscribe-form.validate{:action => "//neuralle.us10.list-manage.com/subscribe/post?u=c7a21948a398f006f046c5731&id=5cff14c3b7", :method => "post", :name => "mc-embedded-subscribe-form", :novalidate => "", :target => "_blank"}
            #mc_embed_signup_scroll
              = render "static_pages/podcast/podcast_content", podcasts: @podcasts
              .subscribe-form
                .indicates-required
                  %span.asterisk *
                  indicates required
                .mc-field-group
                  %label{:for => "mce-EMAIL"}
                    Email Address
                    %span.asterisk *
                  %input#mce-EMAIL.required.email{:name => "EMAIL", :type => "email", :value => ""}/
                .mc-field-group
                  %label{:for => "mce-FNAME"}
                    First Name
                    %span.asterisk *
                  %input#mce-FNAME.required{:name => "FNAME", :type => "text", :value => ""}/
                .mc-field-group
                  %label{:for => "mce-LNAME"} Last Name
                  %input#mce-LNAME{:name => "LNAME", :type => "text", :value => ""}/
                #mce-responses.clear
                  #mce-error-response.response
                  #mce-success-response.response
                %div.subscribe-form-aria
                  %input{:name => "b_c7a21948a398f006f046c5731_5cff14c3b7", :tabindex => "-1", :type => "text", :value => ""}/
                .clear
                  %input#mc-embedded-subscribe.btn.primary.bold{:name => "subscribe", :type => "submit", :value => "Subscribe"}/
