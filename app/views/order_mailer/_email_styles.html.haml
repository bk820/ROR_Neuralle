:scss
  body {
    margin: 0;
  }

  #background {
    background-color: #fff;
    text-align: center;
  }

  #main-content {
    border: 1px solid #eee;
    max-width: 600px;
    background-color: #ffffff;
    border-spacing: 0;
    display: inline-table;
  }

  .divider {
    border-top: 1px solid #eee;
    width: 100%;
    height: 1px;
  }

  p {
    color: #6b6b6b;
    font-family: 'Open Sans', 'Arial', sans-serif;
    font-size: 14px;
    &.small {
      font-size: 13.7px;
      color: #696969;
      margin: 0;
      line-height: 20px;
    }
    &.mb-10 {
      margin-bottom: 10px;
    }
  }

  li {
    list-style: none;
  }

  a {
    color: #f77333;
    text-decoration: none;
    font-family: 'Open Sans', 'Arial', sans-serif;
  }

  h1, h2 {
    font-family: 'Open Sans', 'Arial', sans-serif;
    font-weight: 500;
    margin: 0;
    color: #6b6b6b;
  }

  h1 {
    text-align: center;
    font-size: 20px;
  }

  h2 {
    font-size: 11px;
    margin: 0 0 5px;
    font-weight: 700;
    text-transform: uppercase;
    text-align: center;
  }

  h3 {
    font-size: 14px;
    margin: 10px 0 5px;
  }

  img {
    max-width: 100%;
  }

  .clearfix:after {
    content: " ";
    visibility: hidden;
    display: block;
    height: 0;
    clear: both;
  }

  #price {
    color: #6b6b6b;
    font-family: 'Open Sans', 'Arial', sans-serif;
    width: 100%;
    text-align: center;
    border: none;
    margin: 30px 0 0;
    border-spacing: 0;
    display: inline-table;

    th {
      font-size: 10px;
      text-transform: uppercase;
      padding: 7px 0;
    }
    td {
      font-size: 18px;
    }
  }

  #email {
    font-size: 13px;
    color: #555;
    margin: 25px 0 7px;
    text-align: center;
    a {
      text-decoration: none !important;
      color: #555 !important;
    }
  }

  #date {
    font-size: 14px;
    margin: 0;
    color: #777;
    text-align: center;
  }

  #discount-header {
    text-align: center;
    font-size: 14px;
    margin: 35px 0 0;
  }

  #order-items-wrapper {
    padding: 25px 15px;
    margin: 35px 0 10px;
    border: 0;
    background-color: #f7f7f7;
  }

  #order-items {
    width: 100%;
    color: #555;
    font-family: 'Open Sans', 'Arial', sans-serif;
    &.package {
      margin: 15px 0 0;
      .price {
        padding: 10px 0 5px 10px;
      }
    }
    td {
      text-align: left;
      font-size: 14px;
      padding: 3px 0;
      &.sub {
        padding: 0 0 0 15px;
        font-size: 12px;
        line-height: 18px;
      }
    }
    .price, .quantity {
      text-align: right;
    }
    .price {
      padding: 0 0 0 10px;
    }
  }

  #discount {
    font-size: 12px;
    margin: 25px 0 5px;
    text-align: center;
  }

  #customer-info {
    text-align: center;

    td {
      display: inline-table;
      max-width: 320px;
    }
    .inner {
      text-align: left;
    }
    h2 {
      margin: 0 0 20px;
    }
  }
