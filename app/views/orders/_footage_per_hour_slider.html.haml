.clearfix
.slider-wrapper
  - money = money.present? ? money : false
  = form_for order_item(product.id), remote: true do |f|
    = f.hidden_field :product_id, value: product.id
    = f.text_field :footage_per_hour, class: "product-slider", "data-slider-min"=>0, "data-slider-max"=>quantity, "data-slider-step"=>step, "data-slider-value"=>order_item(product.id).footage_per_hour, "data-slider-handle"=>"custom", "data-slider-tooltip"=>"hide", "data-money"=>money, "data-price"=>set_discount(product.price, false)
  .clearfix
